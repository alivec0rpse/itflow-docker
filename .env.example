# ITFlow Docker Environment Configuration
# Copy to .env and update values

# Database
DB_HOST=db
DB_PORT=3306
DB_NAME=itflow
DB_USER=itflow
DB_PASSWORD=changeme_secure_password_here  # Generate with: openssl rand -base64 32
DB_ROOT_PASSWORD=changeme_root_password_here

# Database external port (remove in production for security)
DB_PORT_EXTERNAL=3306

# Application
APP_NAME=ITFlow
BASE_URL=https://yourdomain.com
HTTPS_ONLY=true
REPO_BRANCH=master
WEB_PORT=80
TZ=America/New_York

# Security
ENABLE_SETUP=1  # Set to 0 after initial setup!
SESSION_TIMEOUT=3600
INSTALLATION_ID=  # Auto-generated if empty

# Mail (optional - configure in web interface)
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME=ITFlow
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_ENCRYPTION=tls

# Optional services
PHPMYADMIN_PORT=8080
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Backups
BACKUP_RETENTION_DAYS=30
